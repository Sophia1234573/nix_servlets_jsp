<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserToEditServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.GetUserToEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>com.solutions.denisovich.controller.EditUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/hello_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/add_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserToEditServlet</servlet-name>
        <url-pattern>/get_user_to_edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/edit_user</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/table_users_tag.tld</taglib-location>
        </taglib>
    </jsp-config>
    <filter>
        <filter-name>EditPasswordFilter</filter-name>
        <filter-class>com.solutions.denisovich.controller.EditPasswordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EditPasswordFilter</filter-name>
        <url-pattern>/edit_user</url-pattern>
    </filter-mapping>
</web-app>
